<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerMainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="설정 할 회의 참여 코드를 입력하세요"/>
    <Button
        android:id="@+id/btn_password"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="회의 코드 설정하기"
        android:layout_marginTop="2dp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edt_com"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:hint="추가 할 안건을 입력하세요"/>
    <Button
        android:id="@+id/btn_com"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="안건 추가하기"
        android:layout_marginTop="2dp"/>
    <Button
        android:id="@+id/btn_clear"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="안건 및 찬반 투표결과 초기화하기"
        android:layout_marginTop="1dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="통계보기"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_statistics"/>


</LinearLayout>