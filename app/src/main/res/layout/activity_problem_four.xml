<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".Problems.ProblemFourActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="LEVEL 4"
        android:textColor="#363636"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7C7C7">

    </LinearLayout>

    <view
        android:id="@+id/four_view"
        class="androidx.viewpager.widget.ViewPager"
        android:layout_width="wrap_content"
        android:layout_height="284dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp" />

    <com.dev.sacot41.scviewpager.DotsView
        android:id="@+id/four_dotsview_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFE05D20"
        android:visibility="gone"/>


    <com.example.cnvoteproject.ClearEditText
        android:id="@+id/four_edt_answer"
        android:layout_width="500dp"
        android:layout_height="67dp"
        android:layout_marginTop="115dp"
        android:background="#ECECEC"
        android:hint="정답을 입력하세요"
        android:padding="13sp"
        android:textColorHint="#707070"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/four_btn_ok"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttondesign"
        android:text="ok"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/four_btn_home"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:background="@drawable/buttondesign2"
        android:enabled="true"
        android:text="home"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/four_answerRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttondesign"
        android:text="" />

</LinearLayout>