<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Problems.Problem9Activity"
    android:orientation="vertical"
    android:gravity="center|top">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안건 9"
        android:textSize="30sp"
        android:textColor="#363636"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C7C7C7">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:id="@+id/nine_1"
        android:visibility="visible">

    <TextView
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nine_context"
        android:padding="100dp"
       />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/buttondesignn"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/nine_btn_yes"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="15dp"
            android:text="찬성" />
        <Button
            android:background="@drawable/buttondesign"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/nine_btn_no"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="15dp"
            android:text="반대" />

    </LinearLayout>


    <Button
        android:background="@drawable/buttondesign2"
        android:id="@+id/nine_btn_home"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:enabled="true"
        android:text="home"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/nine_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="이미 투표 완료한\n안건입니다"
            android:textSize="70dp"
            android:gravity="center"
            android:textColor="#1976D2"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>